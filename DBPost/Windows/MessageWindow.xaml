<Window x:Class="DBPost.Windows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBPost.Windows"
        mc:Ignorable="d"
        Title="MessageWindow" Height="200" Width="500"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        MouseMove="Window_MouseMove"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../themes/CloseButton.xaml"/>
                <ResourceDictionary Source="../themes/addButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="25"
            Background="#353a55"
            BorderBrush="Black"
            BorderThickness="0.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Информационное окно"
                       Foreground="White"
                       FontSize="18"
                       FontFamily="Roboto"
                       Margin="15 15 0 0"/>
            <Button Style="{StaticResource CloseButton}"
                    Width="15"
                    Height="15"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0 15 15 0"
                    Click="ButtonCloseWindow_Click"/>
            <TextBlock Grid.Row="1"
                       TextAlignment="Center"
                       FontSize="18"
                       FontFamily="Roboto"
                       Text="Your message"
                       Foreground="White"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="20 10 20 0"
                       x:Name="messageTextBox"/>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        x:Name="ButtonContainer"
                        Margin="0 0 10 0">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle1}">
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="MinWidth" Value="100"/>
                        <Setter Property="Margin" Value="10 0 0 0"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Background" Value="#738cf2"/>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </Grid>
    </Border>
</Window>
