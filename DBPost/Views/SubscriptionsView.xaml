<UserControl x:Class="DBPost.Views.SubscriptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBPost.Views"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Dragablz="http://dragablz.net/winfx/xaml/dragablz"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../themes/DataGrid.xaml"/>
                <ResourceDictionary Source="../themes/AddButton.xaml"/>
                <ResourceDictionary Source="../themes/SearchTextBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/Generic.xaml" />
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.purple.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="{StaticResource Primary100}"/>
                    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="{StaticResource Primary100Foreground}"/>
                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#728bf0"/>
                    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="{StaticResource Primary700}"/>
                    <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="{StaticResource Primary700Foreground}"/>
                </ResourceDictionary>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.purple.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid >
        <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Подписки"
                       FontFamily="Roboto"
                       FontSize="30"
                       Foreground="#717588"
                       Margin="0 -40"
                       Width="200"
                       Height="35"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>
        <TabControl Style="{StaticResource MaterialDesignFilledTabControl}"
                    HorizontalAlignment="Left">
            <TabItem Header="Актуальные подписки"
                     Width="180">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.25*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Style="{DynamicResource ButtonStyle1}"
                    Grid.Column="1"
                    Width="200"
                    Height="50"
                    Margin="0 20 0 0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Content="+ добавить подписку"
                    Click="Button_Click"/>
                    <Grid Grid.Column="0"
                       HorizontalAlignment="Left">
                        <TextBox x:Name="SearchTextBox"
                                 Style="{StaticResource TextBoxStyle1}"
                                 Padding="32 10 0 0"
                                 Width="255"
                                 Height="40"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        <TextBlock x:Name="SearchTextBlock"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Text="Поиск"
                                   FontSize="15"
                                   Margin="35 0 0 0"
                                   Foreground="#717588"/>
                        <Icon:PackIconMaterial Kind="Magnify"
                                               Foreground="#717588"
                                               Width="15"
                                               Height="15"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="15 0 0 0"
                                               x:Name="SearchIcon"/>
                    </Grid>

                    <DataGrid Style="{DynamicResource DataGridStyle1}"
                  CellStyle="{DynamicResource DataGridCellStyle1}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                  RowStyle="{DynamicResource DataGridRowStyle1}"
                  x:Name="SubscriptionsDataGrid"
                  AutoGenerateColumns="False"
                              Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="40"
                                    Binding="{Binding IDSubscription}"/>
                            <DataGridTextColumn Header="Издание"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="auto"
                                    Binding="{Binding FKPeriodical}">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Подписчик"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="auto"
                                    Binding="{Binding FKSubscriber}"/>
                            <DataGridTextColumn Header="Начало подписки"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="*"
                                    Binding="{Binding SubscriptionStart, StringFormat='dd-MM-yyyy'}"/>
                            <DataGridTextColumn Header="Срок подписки"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="auto"
                                    Binding="{Binding SubscriptionTerm}"/>
                            <DataGridTextColumn Header="Дата оформления"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="*"
                                    Binding="{Binding IssueDate, StringFormat='dd-MM-yyyy'}"/>
                            <DataGridTemplateColumn IsReadOnly="True"
                                        Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource GridEditButton}"
                                                    Click="EditButton_Click"
                                                    Tag="{Binding}">
                                                <Icon:PackIconMaterial Kind="PencilOutline"
                                                           Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                            <Button Style="{StaticResource GridRemoveButton}"
                                                    Margin="5, 0, 0, 0"
                                                    Click="DeleteButton_Click"
                                                    Tag="{Binding}">
                                                <Icon:PackIconMaterial Kind="Delete"
                                                           Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Отчёты" Width="100">
                <Grid Margin="0,10,0,10" Width="799">
                    <TabControl Style="{StaticResource MaterialDesignFilledTabControl}">
                        <TabItem Header="Истекающие подписки">
                            <Grid Margin="0,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Отчёт по подпискам, срок которых истекает в текущем месяце"
                                           FontSize="13"
                                           Margin="10 10 0 10"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="Roboto"
                                           Foreground="#717588"/>

                                <TextBox x:Name="ReportTextBox"
                                         Grid.Row="1"
                                         IsReadOnly="True"
                                         Background="White"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"
                                         FontFamily="Consolas"
                                         Margin="10,0,10,0"/>

                                <StackPanel Grid.Row="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,10,10,0"
                                            Width="427">
                                            <Button Style="{DynamicResource ButtonStyle1}"
                                            Width="200"
                                            Height="50"
                                            Margin="0 20 0 0"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Content="сформировать отчёт"
                                            Click="GenerateReportButton_Click"/>

                                    <Button Style="{DynamicResource ButtonStyle1}"
                                            Width="200"
                                            Height="50"
                                            Margin="20 20 0 0"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Content="сохранить в файл"
                                            Click="SaveReportButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Подписки на издание">
                            <Grid Margin="0,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Отчёт по количеству подписок на издание"
                                           FontSize="13"
                                           Margin="10 10 0 10"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="Roboto"
                                           Foreground="#717588" />

                                <TextBox x:Name="ReportByPeriodicalTextBox"
                             Grid.Row="1"
                             IsReadOnly="True"
                             Background="White"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             Margin="10,0,10,0"/>

                                <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,10,0"
                                Width="427">
                                    <Button Style="{DynamicResource ButtonStyle1}"
                                            Width="200"
                                            Height="50"
                                            Margin="0 20 0 0"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Content="сформировать отчёт"
                                            Click="GenerateReportByPeriodicalButton_Click"/>
                                    <Button Style="{DynamicResource ButtonStyle1}"
                                            Width="200"
                                            Height="50"
                                            Margin="20 20 0 0"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Content="сохранить в файл"
                                            Click="SaveReportByPeriodicalButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Нагрузка сотрудников">
                            <Grid Margin="0,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Отчёт по нагрузке почтальонов"
                   FontSize="13"
                   Margin="10 10 0 10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Roboto"
                   Foreground="#717588" />

                                <TextBox x:Name="ReportByEmployeeTextBox"
                 Grid.Row="1"
                 IsReadOnly="True"
                 Background="White"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Margin="10,0,10,0"/>

                                <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,10,0"
                    Width="427">
                                    <Button Style="{DynamicResource ButtonStyle1}"
                    Width="200"
                    Height="50"
                    Margin="0 20 0 0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Content="сформировать отчёт"
                    Click="GenerateReportByEmployeeButton_Click"/>

                                    <Button Style="{DynamicResource ButtonStyle1}"
                    Width="200"
                    Height="50"
                    Margin="20 20 0 0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Content="сохранить в файл"
                    Click="SaveReportByEmployeeButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem Header="Архив"
                     Width="70"
                     >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.25*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0"
                       HorizontalAlignment="Left">
                        <TextBox x:Name="SearchTextBoxArc"
                                 Style="{DynamicResource TextBoxStyle1}"
                                 Width="255"
                                 Height="40"
                                 Padding="32 10 0 0"
                                 TextChanged="SearchTextBoxArc_TextChanged"/>
                        <TextBlock x:Name="SearchTextBlockArc"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Text="Поиск"
                                   FontSize="15"
                                   Margin="35 0 0 0"
                                   Foreground="#717588"/>
                        <Icon:PackIconMaterial Kind="Magnify"
                                               Foreground="#717588"
                                               Width="15"
                                               Height="15"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="15 0 0 0"
                                               x:Name="SearchIconArc"/>
                    </Grid>
                    <DataGrid Style="{DynamicResource DataGridStyle1}"
                              CellStyle="{DynamicResource DataGridCellStyle1}"
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                              RowStyle="{DynamicResource DataGridRowStyle1}"
                              x:Name="SubscriptionsArchiveDataGrid"
                              AutoGenerateColumns="False"
                              Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="auto"
                                    Binding="{Binding IDArchive}"/>
                            <DataGridTextColumn Header="Издание"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="auto"
                                    Binding="{Binding FKPeriodical}"/>
                            <DataGridTextColumn Header="Подписчик"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="auto"
                                    Binding="{Binding FKSubscriber}"/>
                            <DataGridTextColumn Header="Начало подписки"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="*"
                                    Binding="{Binding SubscriptionStart, StringFormat='dd-MM-yyyy'}"/>
                            <DataGridTextColumn Header="Срок подписки"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="auto"
                                    Binding="{Binding SubscriptionTerm}"/>
                            <DataGridTextColumn Header="Дата оформления"
                                    IsReadOnly="True"
                                    CanUserResize="False"
                                    Width="*"
                                    Binding="{Binding IssueDate, StringFormat='dd-MM-yyyy'}"/>
                            <DataGridTemplateColumn IsReadOnly="True"
                                        Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource GridRemoveButton}"
                                                    Margin="5, 0, 0, 0"
                                                     Click="ArchiveDeleteButton_Click"
                                                     Tag="{Binding}">
                                                <Icon:PackIconMaterial Kind="Delete"
                                                                       Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
